<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalC"
    android:background="#ffeecc"
    android:visibility="visible"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Choose your Medical Conditions:"
        android:textColorHint="@color/black"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbPhysical"
        android:layout_width="268dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:text="Physical Injury"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp" />

    <CheckBox
        android:id="@+id/cbDiabetes"
        android:layout_width="268dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:text="Diabetes"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbPhysical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp" />

    <CheckBox
        android:id="@+id/cbCholesterol"
        android:layout_width="258dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Cholesterol"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cbHypertension"
        app:layout_constraintTop_toBottomOf="@+id/cbDiabetes"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/cbHypertension"
        android:layout_width="267dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:text="Hypertension"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbCholesterol"
        app:layout_constraintTop_toTopOf="@+id/cbDiabetes"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp" />

    <CheckBox
        android:id="@+id/cbInsomnia"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:text="Insomnia"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbHypertension"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/cbObesity"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Obesity"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbInsomnia"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp" />

    <CheckBox
        android:id="@+id/cbDepression"
        android:layout_width="310dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:text="Depression"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbObesity"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp" />

    <CheckBox
        android:id="@+id/cbAngerIssues"
        android:layout_width="303dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:text="Anger Issues"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbDepression"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp" />

    <CheckBox
        android:id="@+id/cbNone"
        android:layout_width="309dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:text="None"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cbAngerIssues"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:text="Submit"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbNone"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>